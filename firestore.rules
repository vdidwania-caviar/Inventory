
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reads for authenticated users on syncState and shopifyProductCache
    match /syncState/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Sync state should only be written by server/admin
    }

    match /shopifyProductCache/{productId} {
      allow read: if request.auth != null;
      allow write: if false; // Cache should only be written by server/admin
    }

    // Add rules for other collections as needed, for example:
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    match /purchaseOrders/{poId} {
       allow read, write: if request.auth != null;
    }

    match /sales/{saleId} {
       allow read, write: if request.auth != null;
    }
    
    match /purchases/{purchaseId} {
       allow read, write: if request.auth != null;
    }

    // Default deny for any other paths if not explicitly matched above
    // or ensure that any general rule below is appropriate.
    // For now, to ensure basic functionality with auth:
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
